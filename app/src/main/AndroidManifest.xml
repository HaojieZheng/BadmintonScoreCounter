<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.haojie.badmintonscorecounter">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".EnterSinglesPlayersNamesActivity"
            android:label="@string/enter_players_names"/>
        <activity
            android:name=".EnterDoublesPlayersNamesActivity"
            android:label="@string/enter_players_names"/>
        <activity
            android:name=".GameSessionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game_session"
            android:theme="@style/FullscreenTheme"/>
        <activity android:name=".ViewPlayersActivity"
                  android:label="@string/title_activity_view_players"/>


        <fragment
            android:id="@+id/view_update_photo_dialog_fragment"
            android:name=".ViewUpdatePhotoDialogFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <activity android:name=".ViewGameStatisticsActivity"
                  android:label="@string/title_activity_game_statistics"/>



    </application>

</manifest>